<% layout("/layouts/boilerplate")%>
<body>

    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>create a new Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Add a Catchy Title" class="form-control" required>
                    <div class="valid-feedback">This looks good</div>
                    <div class="invalid-feedback">Please enter a valid title</div>
                </div>
                
        
                <div class="mb-3">
                    <label for="Title" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description"  class="form-control" required></textarea>
                    <div class="valid-feedback">This looks good</div>
                    <div class="invalid-feedback">Please enter a valid description</div>
                </div>

                                <div class="mb-3">
                    <label for="Title" class="form-label">category</label>
                    <textarea name="listing[category]" placeholder="rooms or Iconic cities','mountain','castels','pool','camping','farm','arcitc'"  class="form-control" required></textarea>
                    <div class="valid-feedback">This looks good</div>
                    <div class="invalid-feedback">Please enter a valid description</div>
                </div>

                
                <div class="mb-3">
                    <label for="Title" class="form-label">Upload Listing Image</label>
                    <input type="file" name="listing[image]" class="form-control">
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="Title" class="form-label">price</label>
                        <input type="number" name="listing[price]" placeholder="enter price"  class="form-control" required>
                        <div class="valid-feedback">This looks good</div>
                        <div class="invalid-feedback">Please enter a valid price</div>
                    </div>
                    
            
                    <div class="mb-3 col-md-8">
                        <label for="Title" class="form-label">country</label>
                    <input type="text" name="listing[country]" placeholder="enter your country"  class="form-control" required>
                    <div class="valid-feedback">This looks good</div>
                    <div class="invalid-feedback">Please enter a valid country</div>
                    </div>
                </div>
                
                
                <div class="mb-3">
                    <label for="Title" class="form-label">location</label>
                    <input type="text" name="listing[location]" placeholder="enter location"  class="form-control" required>
                    <div class="valid-feedback">This looks good</div>
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>
                <br>
                <button class=" btn btn-dark new_listing">ADD</button>
                <br><br>
            </form>
        </div>
    </div>
    
</body>


