<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>create a new Listing</h3>
            <form method="post" action="/listings/<%=listing._id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" id="Title" value="<%=listing.title%>" class="form-control" required>
                    <div class="valid-feedback">This looks good</div>
                    <div class="invalid-feedback">Please enter a valid title</div>
                </div>
                
        
                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <textarea name="listing[description]" id="Description" class="form-control"><%=listing.description%></textarea required>
                    <div class="valid-feedback">This looks good</div>
                    <div class="invalid-feedback">Please enter a valid description</div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Original image</label>
                    <img src="<%= originalImageUrl %>" alt="image" style="height:200px">
                </div>
                
                <div class="mb-3">
                    <label for="Image_link" class="form-label">Image link</label>
                    <input type="file" id="Image_link" name="listing[image]" class="form-control">
                    required
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">price</label>
                        <input type="number" id="price" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
                        <div class="valid-feedback">This looks good</div>
                        <div class="invalid-feedback">Please enter a valid price</div>
                    </div>
                    
            
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">country</label>
                    <input type="text" id="country" name="listing[country]" value="<%=listing.country%>"  class="form-control" required>
                    <div class="valid-feedback">This looks good</div>
                    <div class="invalid-feedback">Please enter a valid country</div>
                    </div>
                </div>
                
                
                <div class="mb-3">
                    <label for="location" class="form-label">location</label>
                    <input type="text" id="location" name="listing[location]" value="<%=listing.location%>"  class="form-control" required>
                    <div class="valid-feedback">This looks good</div>
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>
                <br>
                <button class="btn btn-dark new_listing">edit</button>
                <br><br>
            </form>
        </div>
    </div>
   
</body>
